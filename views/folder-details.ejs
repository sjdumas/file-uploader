<h1 class="text-2xl font-bold mb-4"><%= folder.name %></h1>
<h2 class="text-xl mb-2">Files in this folder:</h2>
<ul class="space-y-2">
	<% if (files.length > 0) { %>
		<% files.forEach(file => { %>
			<li>
				<a href="<%= file.url %>" target="_blank">
					<%= file.name %>
				</a>
			</li>
		<% }) %>
	<% } else { %>
		<li class="text-gray-400">No files yet.</li>
	<% } %>
</ul>
<a href="/dashboard" class="inline-block mt-4 text-sm text-blue-500 hover:underline">← Back to Dashboard</a>
