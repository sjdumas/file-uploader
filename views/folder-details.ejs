<div class="min-h-[60vh]">
	<div class="drive">
		<h1 class="text-2xl font-bold"><%= folder.name %></h1>
	</div>
	<div class="mt-6">
		<% if (files.length > 0) { %>
			<% files.forEach(file => { %>
				<a href="<%= file.url %>" target="_blank" class="drive-files flex items-center gap-2">
					<div class="flex items-center gap-3">
						<i class="material-icons">description</i>
						<div>
							<p class="text-sm font-semibold"><%= file.name %></p>
						</div>
					</div>
				</a>
			<% }) %>
		<% } else { %>
			<p class="text-gray-400 px-2 py-4">No files in this folder yet.</p>
		<% } %>
	</div>
	<a href="/drive" class="inline-block mt-4 text-sm">‚Üê Back to My Drive</a>
</div>
