<div class="min-h-[60vh]">
	<div class="mb-2">
		<h2 class="text-2xl mb-4">Folders</h2>
		<p class="text-xl">Create, view, and manage your folders below.</p>
	</div>
	<div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-6 gap-4">
		<div class="user-buttons folder-buttons">
			<a href="/folders/new" class="btn flex items-center gap-2">
				<span class="material-icons">create_new_folder</span>
				<span>New Folder</span>
			</a>
			<a href="/upload" class="btn flex items-center gap-2">
				<span class="material-icons">upload_file</span>
				<span>Upload File</span>
			</a>
		</div>
	</div>
	<% if (folders.length > 0) { %>
		<ul class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4">
			<% folders.forEach(folder => { %>
				<li class="bg-white p-4 rounded shadow hover:shadow-md transition">
				<strong class="block text-lg font-medium text-gray-800"><%= folder.name %></strong>
				<p class="text-gray-500 text-sm"><%= folder.description || 'No description provided' %></p>
				</li>
			<% }); %>
		</ul>
	<% } else { %>
		<p class="text-gray-600">You haven't created any folders yet.</p>
	<% } %>
</div>
