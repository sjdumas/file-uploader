<div class="min-h-[60vh]">
	<div class="drive">
		<div>
			<h2 class="text-3xl mb-2">MyDrive</h2>
			<p class="text-lg">Create, view, and manage your files and folders.</p>
		</div>
		<div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-8 gap-4">
			<div class="user-buttons folder-buttons">
				<a href="/drive/new-folder" class="btn-alt flex items-center gap-2">
					<span class="material-icons">create_new_folder</span>
					<span>New Folder</span>
				</a>
				<a href="/upload" class="btn-alt flex items-center gap-2">
					<span class="material-icons">upload_file</span>
					<span>Upload File</span>
				</a>
			</div>
		</div>
	</div>
	<% if (folders.length > 0 || files.length > 0) { %>
		<div class="grid grid-cols-1 sm:grid-cols-1 md:grid-cols-1 lg:grid-cols-1">
			<% folders.forEach(folder => { %>
				<div class="drive-files flex items-center justify-between">
					<a href="/drive/<%= folder.id %>" class="flex items-center gap-3">
						<i class="material-icons">folder</i>
						<div>
							<p class="text-sm font-semibold"><%= folder.name %></p>
						</div>
					</a>
					<div class="flex gap-2">
						<a href="/drive/<%= folder.id %>/edit" title="Edit Folder">
							<span class="material-icons text-sm">edit</span>
						</a>
						<form action="/drive/<%= folder.id %>/delete" method="POST" onsubmit="return confirm('Are you sure you want to delete this folder?')">
							<button type="submit" title="Delete Folder" class="plain-btn">
								<span class="material-icons text-sm">delete</span>
							</button>
						</form>
					</div>
				</div>
			<% }) %>
			<% files.forEach(file => { %>
				<a href="<%= file.url %>" target="_blank" class="drive-files">
					<div class="flex items-center gap-3">
						<i class="material-icons">insert_drive_file</i>
						<div>
							<p class="text-sm font-semibold"><%= file.name %></p>
						</div>
					</div>
				</a>
			<% }) %>
		</div>
	<% } else { %>
		<p class="text-gray-600 text-center">Your Drive is empty. Start by uploading files or creating folders.</p>
	<% } %>
</div>
