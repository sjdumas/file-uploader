<div class="upload">
	<div class="form-styles">
		<h2 class="text-2xl font-semibold mb-4 text-center">Upload a File</h2>
		<form action="/upload" method="POST" enctype="multipart/form-data" class="space-y-4">
			<input type="file" name="file" required class="block w-full" />
			<label for="folderId" class="block font-medium">Folder</label>
			<select name="folderId" class="w-full border p-2 rounded">
				<option value="">No folder</option>
				<% userFolders.forEach(folder => { %>
				<option value="<%= folder.id %>"><%= folder.name %></option>
				<% }) %>
			</select>
			<button type="submit" class="bg-green-600 text-white px-4 py-2 rounded">Upload</button>
		</form>
	</div>
</div>
